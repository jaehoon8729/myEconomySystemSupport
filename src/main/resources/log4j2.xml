<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <!-- 이 설정은 에러 로그만 출력하도록 합니다 -->
    <Loggers>
        <!-- 모드 로거 설정 - 에러 레벨 이상만 로깅 -->
